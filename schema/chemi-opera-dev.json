{
  "openapi": "3.0.3",
  "info": {
    "title": "OPERA Predictor",
    "version": "0.0.1",
    "description": "API gateway to OPERA predictions"
  },
  "paths": {
    "/api/opera/version": {
      "get": {
        "operationId": "app.get_version",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/opera/metadata": {
      "get": {
        "operationId": "app.get_metadata",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/opera": {
      "get": {
        "operationId": "app.get_predict",
        "parameters": [
          {
            "name": "smiles",
            "in": "query",
            "description": "SMILES to generate predictions for",
            "required": true,
            "schema": {
              "type": "string"
            },
            "examples": {
              "example1": {
                "summary": "50-01-1",
                "value": "NC(N)=N"
              },
              "example2": {
                "summary": "50-02-2",
                "value": "CC1CC2C3CCC4=CC(=O)C=CC4(C)C3(F)C(O)CC2(C)C1(O)C(=O)CO"
              },
              "example3": {
                "summary": "50-12-4",
                "value": "CCC1(NC(=O)N(C)C1=O)c1ccccc1"
              }
            }
          },
          {
            "name": "format",
            "in": "query",
            "description": "Format to return predictions in (json, csv, xlsx)",
            "schema": {
              "type": "string",
              "default": "json"
            },
            "examples": {
              "example1": {
                "summary": "CSV",
                "value": "csv"
              },
              "example2": {
                "summary": "JSON",
                "value": "json"
              },
              "example3": {
                "summary": "Excel",
                "value": "xlsx"
              }
            }
          },
          {
            "name": "standardize",
            "in": "query",
            "description": "Standardize chemical before calculating predictions",
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request"
          }
        }
      },
      "post": {
        "operationId": "app.post_predict",
        "summary": "Generate predictions for multiple molecules",
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "description": "Format to return predictions in (json, csv, xlsx)",
            "schema": {
              "type": "string",
              "default": "json"
            },
            "examples": {
              "example1": {
                "summary": "CSV",
                "value": "csv"
              },
              "example2": {
                "summary": "JSON",
                "value": "json"
              },
              "example3": {
                "summary": "Excel",
                "value": "xlsx"
              }
            }
          },
          {
            "name": "standardize",
            "in": "query",
            "description": "Standardize chemical before calculating predictions",
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "smiles": {
                    "type": "array"
                  }
                },
                "required": [
                  "smiles"
                ],
                "example": {
                  "smiles": [
                    "FC(C(C(C1OC(=O)C2C(=CC=CC=2)N=1)(F)F)(F)F)(F)F",
                    "CCCCN",
                    "NC(N)=N",
                    "CC1CC2C3CCC4=CC(=O)C=CC4(C)C3(F)C(O)CC2(C)C1(O)C(=O)CO",
                    "CCC1(NC(=O)N(C)C1=O)c1ccccc1"
                  ]
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/api/opera/file": {
      "post": {
        "operationId": "app.post_predict_file",
        "description": "Calculates OPERA predictions for a file (CSV, SMI, SDF)",
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "description": "Format to return predictions in (json, csv, xlsx)",
            "schema": {
              "type": "string",
              "default": "json"
            },
            "examples": {
              "example1": {
                "summary": "CSV",
                "value": "csv"
              },
              "example2": {
                "summary": "JSON",
                "value": "json"
              },
              "example3": {
                "summary": "Excel",
                "value": "xlsx"
              }
            }
          },
          {
            "name": "standardize",
            "in": "query",
            "description": "Standardize chemical before calculating predictions",
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "file"
                ],
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "File to predict"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Request": {
        "type": "object",
        "properties": {
          "smiles": {
            "type": "array"
          }
        },
        "required": [
          "smiles"
        ],
        "example": {
          "smiles": [
            "FC(C(C(C1OC(=O)C2C(=CC=CC=2)N=1)(F)F)(F)F)(F)F",
            "CCCCN",
            "NC(N)=N",
            "CC1CC2C3CCC4=CC(=O)C=CC4(C)C3(F)C(O)CC2(C)C1(O)C(=O)CO",
            "CCC1(NC(=O)N(C)C1=O)c1ccccc1"
          ]
        }
      }
    }
  },
  "servers": [
    {
      "url": ""
    }
  ]
}

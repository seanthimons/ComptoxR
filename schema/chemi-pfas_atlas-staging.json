{
  "openapi": "3.0.3",
  "info": {
    "title": "PFAS Atlas API",
    "version": "1.0",
    "description": "API allows generating a set of PFAS categories via GET (one chemical) or POST (multiple chemicals)"
  },
  "paths": {
    "/api/pfas_atlas/version": {
      "get": {
        "operationId": "app.get_version",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/pfas_atlas/metadata": {
      "get": {
        "operationId": "app.get_metadata",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/pfas_atlas": {
      "get": {
        "operationId": "app.get_cats",
        "summary": "Generate categories for one molecule",
        "parameters": [
          {
            "name": "smiles",
            "in": "query",
            "description": "SMILES string of the molecule",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "Fc1c(F)c(F)c2c(c1F)C(F)(F)C(F)(Br)C2(Cl)Cl"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a category of molecule or error"
          }
        }
      },
      "post": {
        "operationId": "app.post_cats",
        "summary": "Generate categories for multiple molecules",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "smiles": {
                    "type": "array"
                  }
                },
                "required": [
                  "smiles"
                ],
                "example": {
                  "smiles": [
                    "Fc1c(F)c(F)c2c(c1F)C(F)(F)C(F)(Br)C2(Cl)Cl",
                    "FC(C(SCC1C=CC=CC=1)(F)F)Cl"
                  ]
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns categories"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Request": {
        "type": "object",
        "properties": {
          "smiles": {
            "type": "array"
          }
        },
        "required": [
          "smiles"
        ],
        "example": {
          "smiles": [
            "Fc1c(F)c(F)c2c(c1F)C(F)(F)C(F)(Br)C2(Cl)Cl",
            "FC(C(SCC1C=CC=CC=1)(F)F)Cl"
          ]
        }
      }
    }
  },
  "servers": [
    {
      "url": ""
    }
  ]
}

{
  "openapi": "3.0.1",
  "info": {
    "title": "PFAS Cats API",
    "version": "1.0",
    "description": "API allows generating a set of PFAS categories via GET (one chemical) or POST (multiple chemicals)"
  },
  "paths": {
    "/api/pfas_cats/version": {
      "get": {
        "operationId": "app.get_version",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/pfas_cats/metadata": {
      "get": {
        "operationId": "app.get_metadata",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/pfas_cats": {
      "get": {
        "operationId": "app.get_cats",
        "summary": "Generate descriptors for one molecule",
        "parameters": [
          {
            "name": "smiles",
            "in": "query",
            "description": "SMILES to generate categories for",
            "required": true,
            "schema": {
              "type": "string"
            },
            "examples": {
              "valid_PFAS": {
                "summary": "SMILES that generates PFAs category",
                "value": "FC(C(C(C1OC(=O)C2C(=CC=CC=2)N=1)(F)F)(F)F)(F)F"
              },
              "invalid_PFAS": {
                "summary": "Non-PFAS chemical",
                "value": "CCCCN"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a calculated category or error"
          }
        }
      },
      "post": {
        "operationId": "app.post_cats",
        "summary": "Generate categories for multiple molecules",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "chemicals": {
                    "type": "array"
                  }
                },
                "required": [
                  "chemicals"
                ],
                "example": {
                  "chemicals": [
                    "FC(C(C(C1OC(=O)C2C(=CC=CC=2)N=1)(F)F)(F)F)(F)F",
                    "CCCCN"
                  ]
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns calculated descriptors"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Request": {
        "type": "object",
        "properties": {
          "chemicals": {
            "type": "array"
          }
        },
        "required": [
          "chemicals"
        ],
        "example": {
          "chemicals": [
            "FC(C(C(C1OC(=O)C2C(=CC=CC=2)N=1)(F)F)(F)F)(F)F",
            "CCCCN"
          ]
        }
      }
    }
  },
  "servers": [
    {
      "url": ""
    }
  ]
}
